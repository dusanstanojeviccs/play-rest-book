# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /books          books.BookController.findAll()
GET     /books/:id      books.BookController.findById(id: Integer)
POST    /books          books.BookController.create()
PUT     /books/:id      books.BookController.update(id: Integer)
DELETE  /books/:id      books.BookController.delete(id: Integer)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
